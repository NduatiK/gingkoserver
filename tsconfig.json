{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ],
    "sourceMap": true
  },
  "include": [ "./src/**/*" ],
  "exclude": [
    "node_modules"
  ]
}